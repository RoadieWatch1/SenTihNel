{
  "expo": {
    "name": "Sentihnel",
    "slug": "sentihnel-app",
    "icon": "./assets/icon.png",
    "scheme": "sentihnel",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vizir.sentihnel",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ],
        "NSSpeechRecognitionUsageDescription": "Allow SenTihNel to use speech recognition.",
        "NSMicrophoneUsageDescription": "Allow SenTihNel to use the microphone."
      }
    },
    "android": {
      "package": "com.vizir.sentihnel",
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.CAMERA",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.FOREGROUND_SERVICE_SPECIAL_USE"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-dev-client",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SenTihNel to access your camera for security.",
          "microphonePermission": "Allow SenTihNel to hear the wake word."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "SenTihNel needs your location in the background to track you during an emergency.",
          "locationAlwaysPermission": "SenTihNel needs your location in the background to track you during an emergency.",
          "locationWhenInUsePermission": "SenTihNel needs your location to track you during an emergency.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow SenTihNel to use the microphone.",
          "speechRecognitionPermission": "Allow SenTihNel to use speech recognition."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/alarm.mp3"
          ]
        }
      ],
      "./plugins/withFloatingSOSButton"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2e7642fa-7d6a-4be4-a28c-b46f7066f633"
      }
    },
    "owner": "netizensphere"
  }
}
